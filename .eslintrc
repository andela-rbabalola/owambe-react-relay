{
  "root": true,
  "extends": [
    "airbnb",
    "standard",
    "standard-react"
  ],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "jsx-a11y/href-no-hash": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "react/jsx-filename-extension": 0,
    "react/prefer-stateless-function": 0,
    "semi": [
      2,
      "always"
    ],
    "space-infix-ops": 0,
    "max-len": [
      2,
      120,
      2
    ],
    "react/jsx-no-bind": [
      1,
      {
        "allowArrowFunctions": true
      }
    ],
    "jsx-quotes": [
      2,
      "prefer-single"
    ],
    "curly": [
      "error",
      "multi-line"
    ],
    "no-shadow": [
      "error",
      {
        "allow": [
          "req",
          "res",
          "error",
          "path"
        ]
      }
    ]
  }
}
